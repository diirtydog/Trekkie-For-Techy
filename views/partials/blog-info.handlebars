<article class="post">
            <div class="title">
               <h2>{{title}}</h2>
                <span>({{blog_text}})</span>
            </div>
            <div class="meta">
                Created by {{user.username}} on
                {{format_date createdAt}}
                |
                <a href="/blog/{{id}}">{{comments.length}} {{format_plural "comment" comments.length}}</a>
            </div>
</article>